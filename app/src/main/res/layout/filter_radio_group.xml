<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <me.craftcreative.bananaz.Tweaks.RecursiveRadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/filter_radio_group"
        android:orientation="vertical"
        >
        <!--Sort by RadioGroup Upper level-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            >
            <!--Sort by Radiobtn CardView-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:contentPadding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                >
                <!--Sort by Radiobtn -->
                <!-- RADIO BTN AND ID ARE HERE !!!!!!! -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PRICE U"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/radio_one"
                    android:onClick="fChecked"

                    />
            </android.support.v7.widget.CardView>
            <!--Sort by Radiobtn CardView-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:contentPadding="8dp"
                android:layout_centerHorizontal="true"
                >
                <!--Sort by Radiobtn-->
                <!-- RADIO BTN AND ID ARE HERE !!!!!!! -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PRICE D"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/radio_two"
                    android:onClick="fChecked"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            >
            <!--Sort by Radiobtn CardView-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                app:contentPadding="8dp"
                >
                <!--Sort by Radiobtn -->
                <!-- RADIO BTN AND ID ARE HERE !!!!!!! -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DISTANCE"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/radio_three"
                    android:onClick="fChecked"
                    />
            </android.support.v7.widget.CardView>
            <!--Sort by Radiobtn CardView-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:contentPadding="8dp"
                android:layout_centerHorizontal="true"
                >
                <!--Sort by Radiobtn-->
                <!-- RADIO BTN AND ID ARE HERE !!!!!!! -->
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DATE"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/radio_four"
                    android:onClick="fChecked"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </me.craftcreative.bananaz.Tweaks.RecursiveRadioGroup>

</LinearLayout>